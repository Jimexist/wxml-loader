{
  "name": "@jimexist/mini-program-xml-loader",
  "description": "mini-program xml loader for webpack 4",
  "version": "0.3.2",
  "main": "lib/index",
  "files": [
    "README.md",
    "LICENSE.md",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "start": "jest test --watch",
    "test": "jest test --coverage",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "prebuild": "npm run clean",
    "build:watch": "babel src -d lib -w",
    "build": "babel src -d lib",
    "preversion": "yarn test && yarn build"
  },
  "author": "Jimexist",
  "repository": "Jimexist/mini-program-xml-loader",
  "keywords": [
    "wxml",
    "loader",
    "webpack",
    "wxapp",
    "weapp",
    "mini-program",
    "wechat",
    "alipay"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "html-minifier": "^3.5.6",
    "loader-utils": "^1.2.3",
    "sax": "^1.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-es2015-destructuring": "^6.19.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-es2015-parameters": "^6.18.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "coveralls": "^3.0.0",
    "cross-env": "^4.0.0",
    "eslint": "^5.16.0",
    "eslint-config-cantonjs": "^2.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^3.1.0",
    "extract-loader": "^2.0.1",
    "file-loader": "^1.1.11",
    "husky": "^1.3.1",
    "jest": "^21.2.1",
    "lint-staged": "^8.1.5",
    "mkdirp": "^0.5.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.5.4",
    "webpack": "^4.16.0",
    "webpack-chain": "^4.9.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      "lib",
      "dist"
    ]
  }
}
